<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="org.opencv.cultoftheunicorn.marvel.cultoftheunicorn.marvel.Training">

        <cultoftheunicorn.marvel.CameraView
            android:id="@+id/camera_view"
            android:layout_width="325dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp" />

        <TextView
            android:id="@+id/results"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_above="@+id/scan"
            android:layout_toRightOf="@+id/camera_view"
            android:layout_toEndOf="@+id/camera_view"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"/>

        <ToggleButton
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textAllCaps="false"
            android:textOff="@string/scan"
            android:textOn="@string/scanning"
            android:layout_alignBottom="@+id/camera_view"
            android:layout_toRightOf="@+id/camera_view"
            android:layout_toEndOf="@+id/camera_view"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/camera_view"
            android:layout_toEndOf="@id/camera_view"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:text="@string/results"
            android:textColor="@color/lightBlack"
            android:textStyle="bold"
            android:layout_alignTop="@+id/camera_view" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/results"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:textAllCaps="false"
            android:text="Submit" />

    </RelativeLayout>

</ScrollView>

